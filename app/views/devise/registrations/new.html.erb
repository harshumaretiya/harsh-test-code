<div class="font-sans">
  <div class="relative min-h-screen flex flex-col sm:justify-center items-center bg-gray-100 ">
    <div class="relative sm:max-w-sm w-full">
      <div class="card bg-blue-400 shadow-lg  w-full h-full rounded-3xl absolute  transform -rotate-6"></div>
      <div class="card bg-red-400 shadow-lg  w-full h-full rounded-3xl absolute  transform rotate-6"></div>
      <div class="relative w-full rounded-3xl  px-6 py-4 bg-gray-100 shadow-md">
        <label for="" class="block mt-3 text-sm text-gray-700 text-center font-semibold">
          Register Account
        </label>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "mt-10") do |f| %>
<%= devise_error_messages! %>
        <div class="mt-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "Email" %>
        </div>
          <div class="mt-7">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first name",  class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "First Name" %>
        </div>
          <div class="mt-7">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last name",  class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "Last Name" %>
        </div>
          <div class="mt-7">
          <%= f.number_field :contact_number, autofocus: true, autocomplete: "contact number",  class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "Contact Number" %>
        </div>

        <div class="mt-7">
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "Password" %>
        </div>

        <div class="mt-7">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full border-none bg-gray-100 h-11 rounded-xl shadow-lg hover:bg-blue-100 focus:bg-blue-100 focus:ring-0", placeholder: "Confirm Password"  %>
        </div>

        <div class="mt-7">
          <%= f.submit "Register", class: "bg-blue-500 w-full py-3 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105" %>
        </div>

        <div class="flex mt-7 items-center text-center">
          <hr class="border-gray-300 border-1 w-full rounded-md">
          <label class="block font-medium text-sm text-gray-600 w-full">
            Already have an Account
          </label>
          <hr class="border-gray-300 border-1 w-full rounded-md">
        </div>

        <div class="flex mt-7 justify-center">
          <%= link_to "Sign In",  new_session_path(resource_name), class: "text-center bg-blue-500 w-full py-3 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105"  %><br />
          <div class="mt-7">
          </div>
        </div>

        <% end %>
      </div>
    </div>
  </div>
</div>